@{ 
    Layout = "~/Views/User/_UserLayout.cshtml";
}
<div class="main" ng-app="userModule">
    <div ng-controller="UserNgController as vm">
        <div class="mainForm">
            <p id="title">Please select league</p>
            <select name="selectLeague" id="selectLeague" ng-model="vm.currLeagueId" ng-change="vm.onLeagueChange()">
                <option ng-repeat="l in vm.leagues" value="{{l.LeagueId}}">{{l.Name}}</option>
            </select>
            <div class="stagesList">
                <ul>
                    <li ng-repeat="s in vm.currStages">
                        <input type="radio" name="selectedStage" value="{{s}}" ng-model="vm.currStage"/>{{s.Name}}<br />
                    </li>
                </ul>
            </div>
            <div class="pointsBox">
                <p id="title">Please set your rules</p>

                <label for="fullPoints" id="title">Full</label>
                <input type="text" name="fullPoints" class="txtInput" ng-model="vm.currPoints.Full"/><br />

                <label for="goalDiffPoints" id="title">Goal diff</label>
                <input type="text" name="goalDiffPoints" class="txtInput" ng-model="vm.currPoints.GoalDif"/><br />

                <label for="justWinnerPoints" id="title">Full</label>
                <input type="text" class="txtInput" name="justWinnerPoints" ng-model="vm.currPoints.JustWinner"/><br />
            </div>
            <div class="usersBox">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th id="title">Login</th>
                            <th id="title">Full Name</th>
                            <th id="title">Add</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="u in vm.users">
                        <td>{{u. Login}}</td>
                        <td>{{u.FullName}}</td>
                        <td>
                            <button class="btn-info" id="{{u.UserId}}" ng-click="vm.onUserAdd(u.UserId);" state-button">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <button class="btn-info rondedBtn  submitBtn center" type="submit">Add</button>
        </div>
    </div>
</div>
<script src="~/Scripts/angular/user/userModule.js"></script>
<script src="~/Scripts/angular/user/userController.js"></script>
<script src="~/Scripts/angular/user/userService.js"></script>
